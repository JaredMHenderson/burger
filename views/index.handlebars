<div class="container-fluid">
<div class="jumbotron" style="text-align: center">
  <div class="container">
    <h1>Burgers!</h1>
  </div>
</div>



<div class="row">
  
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <h2>New Burgers</h2>
    
    <ul>
      {{#each cats}} {{#unless sleepy}} {{> cats/cat-block sleep=true}} {{/unless}} {{/each}}
    </ul>
  </div>

  
  <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
    <h2>Devoured Burgers!</h2>
    
    <ul>
      {{#each cats}} {{#if sleepy}} {{> cats/cat-block sleep=false}} {{/if}} {{/each}}
    </ul>
  </div>
  
  
</div>





<h2>Create a Bruger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Eat?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Available
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>